# build image
FROM golang:1.15.0-alpine as builder

RUN apk update && apk upgrade && \
    apk add --no-cache bash git openssh

WORKDIR /app

# Copy and download dependencies to cache them and faster build time
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Test then build app
RUN go build -v github.com/creekorful/trandoshan/cmd/tdsh-extractor

# runtime image
FROM alpine:latest
COPY --from=builder /app/tdsh-extractor /app/

WORKDIR /app/

ENTRYPOINT ["./tdsh-extractor"]